{
    "meta": {
        "label": "Geospatial density chart",
        "description": "Custom chart to visualize datasets as graphs. These datasets must have source and target columns.",
        "icon": "icon-link"
    },

    "baseType": "STANDARD",
    "hasBackend": "true",

    "chart" : {
        "datasetParamName": "dataset",
        "leftBarLabel": "Chart parameters",
        "leftBarParams": [
            {
                "name": "max_density",
                "type": "INT",
                "label": "Max displayed density",
                "description": "+/- one geopoint",
                "mandatory": true,
                "minI":1,
                "maxI":3000,
                "defaultValue": 50
            },
            {
                "type": "SEPARATOR",
                "label": "Advanced"
            },
            {
                "name": "advanced_parameters",
                "type": "BOOLEAN",
                "label": "Show advanced options",
                "description": "",
                "mandatory": false,
                "defaultValue": false
            },
            {
                "name": "density_color",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Color of the geospatial density chart",
                "description": "",
                "mandatory": false,
                "visibilityCondition": "model.advanced_parameters"
            },
            {
                "name": "numerical_colors",
                "type": "BOOLEAN",
                "label": "Numerical colors",
                "description": "Use a numerical scale for colors",
                "mandatory": false,
                "defaultValue": false,
                "visibilityCondition": "model.advanced_parameters"
            }
        ],
        "topBar": "STD_FORM",
        "topBarParams": [
            {
                "name": "geopoint",
                "type": "DATASET_COLUMN",
                "datasetParamName": "dataset",
                "label": "Source",
                "description": "",
                "mandatory": true
            }
        ],
        "canFilter": true,
        "canFacet": false
    }
}