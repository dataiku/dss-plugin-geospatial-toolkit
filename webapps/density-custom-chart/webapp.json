{
    "meta": {
        "label": "Geospatial density chart",
        "description": "Custom chart to visualize datasets as graphs. These datasets must have source and target columns.",
        "icon": "icon-link"
    },

    "baseType": "STANDARD",
    "hasBackend": "true",

    "chart" : {
        "datasetParamName": "dataset",
        "leftBarLabel": "Chart parameters",
        "leftBarParams": [
            {
                "name": "intensity",
                "type": "INT",
                "label": "Alpha of the density chart visualisation",
                "description": "Transparency of the chart",
                "mandatory": true,
                "minI":1,
                "maxI":100,
                "defaultValue": 50
            },
            {
                "name": "color_palette",
                "type": "INT",
                "label": "Choose the color palette of the density chart",
                "description": "Color palette",
                "mandatory": true,
                "minI":1,
                "maxI":5,
                "defaultValue": 1
            },
            {
                "name": "radius",
                "type": "INT",
                "label": "Radius of a one point density chart",
                "description": "Radius",
                "mandatory": true,
                "minI":1,
                "maxI":100,
                "defaultValue": 50
            },
            {
                "type": "SEPARATOR",
                "label": "Advanced"
            },
            {
                "name": "advanced_parameters",
                "type": "BOOLEAN",
                "label": "Show advanced options",
                "description": "",
                "mandatory": false,
                "defaultValue": false
            },
            {
                "name": "sample_advanced_parameters",
                "type": "INT",
                "label": "sample_advanced_parameters",
                "description": "This is a sample parameter",
                "mandatory": false,
                "defaultValue": false,
                "visibilityCondition": "model.advanced_parameters"
            }
        ],
        "topBar": "STD_FORM",
        "topBarParams": [
            {
                "name": "geopoint",
                "type": "DATASET_COLUMN",
                "datasetParamName": "geopoint_column",
                "label": "geopoint_column",
                "description": "Column containing the geopoint",
                "mandatory": true
            },
            {
                "name": "tooltip",
                "type": "DATASET_COLUMN",
                "datasetParamName": "tooltip_column",
                "label": "tooltip_column",
                "description": "Column containing the tooltip",
                "mandatory": false
            }
        ],
        "canFilter": true,
        "canFacet": false
    }
}